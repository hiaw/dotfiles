{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "leader": "ctrl+l",
    "command_list": "ctrl+k",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "permission": {
    "bash": {
      "git commit": "deny",
      "git push": "deny",
      "supabase push": "ask",
      "*": "allow"
    },
    "edit": "allow",
    "webfetch": "allow"
  }
}
